{
  "name": "gpt-ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered dynamic UI generation system",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:admin": "cd apps/admin-dashboard && npm run dev",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "setup": "./scripts/setup.sh",
    "test:system": "./scripts/test.sh",
    "install:all": "npm install && ./scripts/setup.sh"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}