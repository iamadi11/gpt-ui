{
  "name": "gpt-ui",
  "version": "3.1.0",
  "description": "SourceLens - Glass search results for AI chats. Enhanced results panel with preview, pins, and local-only knowledge insights.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "node scripts/package.cjs",
    "bump:patch": "node scripts/bump-version.cjs patch",
    "bump:minor": "node scripts/bump-version.cjs minor",
    "bump:major": "node scripts/bump-version.cjs major",
    "lint": "echo 'Linting not configured. Run: npm run build to check TypeScript errors.'"
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "search-results"
  ],
  "author": "iamadi11",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitejs/plugin-react": "^4.3.1",
    "sharp": "^0.33.5",
    "terser": "^5.44.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.1",
    "vite-plugin-static-copy": "^1.0.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "webextension-polyfill": "^0.12.0"
  }
}
